# Configurações do Bot de Conteúdo Criativo
BOT_SEND_TIME=09:30
PORT=3000
NODE_ENV=development

# Novo: Configurações de criatividade
CREATIVITY_LEVEL=creative  # conservative | balanced | creative | wild
CONTENT_FOCUS=humor        # humor | mixed | professional
WORKDAYS_ONLY=true         # true = apenas seg-sex, false = todos os dias

# Supabase - Database
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Microsoft Teams via Power Automate
POWER_AUTOMATE_URL=your_power_automate_webhook_url

# OpenAI para geração de conteúdo criativo
OPENAI_API_KEY=your_openai_api_key

# Opcional: Configurações avançadas
MAX_MESSAGE_LENGTH=200     # Máximo de caracteres por mensagem
MIN_MESSAGE_LENGTH=15      # Mínimo de caracteres por mensagem
RETRY_ATTEMPTS=3           # Tentativas de geração em caso de erro
SIMILARITY_THRESHOLD=0.75  # Limite para detectar conteúdo similar (0-1)

# Opcional: Configurações de estilo por dia
MONDAY_STYLE=humor         # Estilo preferido para segunda
TUESDAY_STYLE=tip          # Estilo preferido para terça
WEDNESDAY_STYLE=curiosity  # Estilo preferido para quarta
THURSDAY_STYLE=reflection  # Estilo preferido para quinta
FRIDAY_STYLE=humor         # Estilo preferido para sexta

# Opcional: Webhook para notificações de erro
ERROR_NOTIFICATION_WEBHOOK=your_error_webhook_url

# Opcional: Analytics e monitoramento
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=90
