{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/cron-trigger",
      "dest": "/api/simple-cron.js"
    },
    {
      "src": "/api/test-cron",
      "dest": "/api/test-cron.js"
    },
    {
      "src": "/api/send-message",
      "dest": "/api/index.ts"
    },
    {
      "src": "/send-message",
      "dest": "/api/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.ts"
    }
  ],
  "env": {
    "VERCEL_CRON": "true"
  },
  "crons": [
    {
      "path": "/api/cron-trigger",
      "schedule": "${BOT_SEND_TIME=05 22 * * *}"
    }
  ]
}
