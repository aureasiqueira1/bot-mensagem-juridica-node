{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/cron-trigger",
      "dest": "/api/index.js"
    },
    {
      "src": "/api/send-message",
      "dest": "/api/index.js"
    },
    {
      "src": "/send-message",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.js"
    }
  ],
  "crons": [
    {
      "path": "/api/cron-trigger",
      "schedule": "38 21 * * *"
    }
  ]
}
